{
  "name": "code-editor",
  "version": "0.2.1",
  "description": "The code editor plugin for Fireball Editor",
  "author": "Firebox Technology",
  "fireball": {
    "main": "editor/main.js",
    "panels": {
      "default": {
        "type": "dockable",
        "view": "editor/panel/code-editor.html",
        "ctor": "CodeEditor",
        "title": "Code Editor",
        "width": 1200,
        "height": 600,
        "min-width": 400,
        "min-height": 400,
        "messages": [
          "panel:open",
          "asset:changed"
        ],
        "profiles": {
          "global": {
            "theme": "zenburn",
            "tabSize": 2,
            "keyMap": "sublime",
            "fontSize": 14,
            "fontFamily": "DejaVu Sans Mono",
            "autoComplete": true
          }
        }
      }
    }
  }
}