{
    "name": "build-settings",
    "version": "0.1.0",
    "description": "The build settings for Fireball Engine",
    "author": "KamiSama <kamisama.lwh@qq.com>",
    "fireball": {
        "main": "editor/main.js",
        "menus": [
            {
                "path": "File/Build Settings",
                "message": "build-settings:open"
            }
        ],
        "windows": {
            "build-settings": {
                "url": "editor/index.html",
                "options": {
                    "title": "Build Settings",
                    "width": 500,
                    "height": 520,
                    "min-width": 500,
                    "min-height": 500,
                    "resizable": false,
                    "always-on-top": true
                }
            }
        }
    }
}
